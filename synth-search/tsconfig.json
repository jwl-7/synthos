{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "baseUrl": "./",
        "paths": { "@/*": ["src/*"] },
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["src", "vite.config.ts"]
}
